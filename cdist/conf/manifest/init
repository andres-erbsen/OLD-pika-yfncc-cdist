# vim: set ts=4 sw=4 et :

__file /etc/cdist-configured

case "$__target_host" in
   pika-guest-ap-murph.mit.edu)
	# # TP-LINK WDR43000 access points
        # ## Manual Preparation
        # - install openwrt
        # - ssh keys in /etc/dropbear/authorized_keys
        # - `opkg update && opkg install coreutils-stat && opkg install coreutils-cksum`
        __package coreutils
        __package coreutils-stat
        __package coreutils-cksum


	export CDIST_ORDER_DEPENDENCY=on
        __ssh_authorized_key andreser --file /etc/dropbear/authorized_keys \
            --key 'ssh-rsa ' \
            --comment andreser
        __ssh_authorized_key jadep --file /etc/dropbear/authorized_keys \
            --key 'ssh-rsa ' \
            --comment jadep
        __uci_key_value "dropbear.@dropbear[0].PasswordAuth" --value off
    unset CDIST_ORDER_DEPENDENCY


	__start_on_boot firewall --state absent
	__start_on_boot uhttpd --state absent
	__start_on_boot telnet --state absent
	__start_on_boot odhcpd --state absent
	__start_on_boot dnsmasq --state absent
	
	__uci_key_value system.hostname --value "pika-guest-ap-murph"
	
	__uci_key_value dhcp.lan.ignore --value 1	
	__uci_key_value dhcp.lan.ra_management --value 1	
	__uci_key_value dhcp.lan.start --state absent	
	__uci_key_value dhcp.lan.limit --state absent	
	__uci_key_value dhcp.lan.leasetime --state absent

	export CDIST_ORDER_DEPENDENCY=on
	__uci_add_section firewall.@forwarding[1]
	__uci_key_value firewall.@forwarding[1].dest --value lan
	__uci_key_value firewall.@forwarding[1].src --value wan
	unset CDIST_ORDER_DEPENDENCY

	__uci_key_value network.wan._orig_ifname --value 'eth0.2'
	__uci_key_value network.wan._orig_bridge --value false
	__uci_key_value network.wan.proto --value static
	__uci_key_value network.wan.ipaddr --value '18.102.214.14'
	__uci_key_value network.wan.netmask --value '255.255.255.0'
	__uci_key_value network.wan.gateway --value '18.102.214.1'
	__uci_key_value network.wan.broadcast --value '18.102.214.255'
	__uci_key_value network.wan.dns --value '18.71.0.151'
	__uci_key_value network.wan.type --value bridge
	__uci_key_value network.@switch_vlan[0].ports --value 0t
	__uci_key_value network.@switch_vlan[0].vid --value 1
	__uci_key_value network.@switch_vlan[1].ports --value '0t 1 2 3 4 5'
	__uci_key_value network.@switch_vlan[1].vid --value 2
	
	__uci_key_value wireless.@wifi-iface[0].network --value 'lan wan'
	__uci_key_value wireless.@wifi-iface[0].ssid --value 'pika-livingroom'
	__uci_key_value wireless.@wifi-iface[1].network --value 'lan wan'
	__uci_key_value wireless.@wifi-iface[1].ssid --value 'pika-livingroom'
	__uci_key_value wireless.radio0.channel --value 11
	__uci_key_value wireless.radio0.disabled --value 1
	__uci_key_value wireless.radio1.channel --value 165
	__uci_key_value wireless.radio1.disabled --value 1
    ;;
    "pika-guest-manager.mit.edu") # # dhcp server for the guest network. OpenBSD resflash.
    export CDIST_ORDER_DEPENDENCY=on
        # NB! make sure to point resflash to all persistent configuration!

        # ## network
        echo 'inet 18.102.214.13 255.255.255.0 NONE' | __file /etc/hostname.rl0 --source -
        echo '18.102.214.1' | __file /etc/mygate --source -
        __hostname

        # ## ssh
        __key_value HostKey --value /etc/ssh/ssh_host_ed25519_key --file /etc/ssh/sshd_config --delimiter ' '
        __key_value PubkeyAuthentication --value yes --file /etc/ssh/sshd_config --delimiter ' '
        __key_value PasswordAuthentication --value no --file /etc/ssh/sshd_config --delimiter ' '
        __key_value ChallengeResponseAuthentication --value no --file /etc/ssh/sshd_config --delimiter ' '
        __key_value PermitRootLogin --value prohibit-password --file /etc/ssh/sshd_config --delimiter ' '

        # ### keys
        # The keys are in /etc because resflash does not persist home directories.
        __file /etc/ssh/authorized_keys_command --mode 755 --source - << EOF
#!/bin/sh
set -e
echo 'ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIA8HcOuc+0hVcc0Ql87QvyUNz8euGKmp9I4rrxc3tlx2 andreser@ashryn'
cat "$(grep "^$1:" /etc/passwd | cut -d: -f6)/.ssh/authorized_keys" 2>/dev/null || true
EOF
        __key_value AuthorizedKeysCommand --value /etc/ssh/authorized_keys_command --file /etc/ssh/sshd_config --delimiter ' '

        # ## NTP
        __key_value servers --value pool.ntp.org --file /etc/ntpd.conf --delimiter ' '
        __key_value constraints --value '"https://www.google.com/"' --file /etc/ntpd.conf --delimiter ' '
        __key_value ntpd_flags --value '""' --file /etc/rc.conf.local --delimiter '='

        # ## dhcp server
        # this dhcp server MUST be isoleted from the MIT network, otherwise
        # arbitrary computer badness and IS&T disapproval will result.
        # Currently, the isolation is performed through UDP port filtering on
        # Netgear switch 1 port 48.
        __key_value dhcpd_flags --value '""' --file /etc/rc.conf.local --delimiter '='
        __file /etc/dhcpd.conf --source - << EOF
option  domain-name "mit.edu";
option  domain-name-servers 18.71.0.151, 18.70.0.160, 18.72.0.3, 8.8.8.8, 8.8.4.4;

subnet 18.102.214.0 netmask 255.255.255.0 {
        option routers 18.102.214.1;
        range 18.102.214.64 18.102.214.95;
        default-lease-time 3600;
        max-lease-time 3600;
}
EOF

        ## resflash
        # this section syncs changes to disk and must this be last
        __key_value save_etc --file /etc/resflash.conf --delimiter '=' \
            --value "'resolv.conf myname mygate hostname.rl0 ssh/sshd_config ssh/authorized_keys_command ssh/ssh_host_ecdsa_key ssh/ssh_host_ed25519_key ssh/ssh_host_ed25519_key.pub ssh/ssh_host_rsa_key.pub ssh/ssh_host_rsa_key ssh/ssh_host_ecdsa_key.pub rc.conf.local ntpd.conf dhcpd.conf'"
        __key_value save_var --file /etc/resflash.conf --delimiter '=' \
            --value "'db/host.random'"
        __resflash_save

    unset CDIST_ORDER_DEPENDENCY
    ;;


    "sandie.mit.edu")
        __package vim
        __package sudo
        __package tree
        __package rsync
        __package curl
        __package sshfs

        # TODO: refactor this block
        __package openssh-server
        __key_value HostKey --value /etc/ssh/ssh_host_ed25519_key --file /etc/ssh/sshd_config --delimiter ' '
        __key_value PubkeyAuthentication --value yes --file /etc/ssh/sshd_config --delimiter ' '
        __key_value PasswordAuthentication --value no --file /etc/ssh/sshd_config --delimiter ' '
        __key_value ChallengeResponseAuthentication --value no --file /etc/ssh/sshd_config --delimiter ' '
        __start_on_boot ssh

        __ssh_authorized_key andreser@ashryn --file "/root/.ssh/autorized_keys" \
           --key "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIAcPzxnAu7oZwL0gh/JK+4jVbihCVO0FprPHvQuqX1hl andreser@ashryn" 

        __package openntpd

        # curl https://install.sandstorm.io/ | bash
    ;;

esac
